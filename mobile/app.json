{
  "expo": {
    "name": "PaperAssist",
    "slug": "paperassist",
    "version": "0.1.0",
    "orientation": "portrait",
    "scheme": "paperassist",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "backgroundColor": "#0a0a0a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "dev.tojest.paperassist",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "PaperAssist uses Bluetooth to connect to your e-paper device"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0a0a0a"
      },
      "package": "dev.tojest.paperassist",
      "permissions": ["BLUETOOTH_SCAN", "BLUETOOTH_CONNECT", "ACCESS_FINE_LOCATION"]
    },
    "plugins": ["expo-router"]
  }
}
